generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("TEACHER") // ADMIN, MANAGER, TEACHER
  phone     String?
  isActive  Boolean  @default(true)
  hourlyRate Int     @default(0) // Salary per 60 minutes
  
  // Relations
  groups    Group[]  @relation("TeacherGroups")
  salary    Salary[]
  logs      Log[]
  reports   TeacherReport[]
  trialLessons TrialLesson[] // Teacher can conduct trial lessons
  telegramChats TelegramChat[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Lead {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String
  course    String
  status    String    @default("new") // new, processing, won, lost
  message   String?
  source    String?
  
  // Relations
  student   Student?
  notes     Note[]
  logs      LeadLog[]
  telegramChats TelegramChat[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int?
  leadId    Int
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Course {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int      @default(0)
  groups    Group[]
  materials Material[]
  homework  Homework[]
}

model Classroom {
  id        Int      @id @default(autoincrement())
  name      String
  capacity  Int      @default(10)
  groups    Group[]
}

model Group {
  id          Int      @id @default(autoincrement())
  name        String
  level       String
  
  courseId    Int
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  teacherId   Int
  teacher     User     @relation("TeacherGroups", fields: [teacherId], references: [id])
  
  roomId      Int?
  room        Classroom? @relation(fields: [roomId], references: [id])
  
  students    Student[]
  lessons     Lesson[]
  schedules   ScheduleTemplate[]

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  balance   Int      @default(0)
  lessons   Int      @default(0) // Remaining lessons
  
  leadId    Int?     @unique
  lead      Lead?    @relation(fields: [leadId], references: [id])
  
  groups    Group[]
  attendance Attendance[]
  payments  Payment[]
  mockExams MockExam[]
  telegramChats TelegramChat[]

  createdAt DateTime @default(now())

  status    String   @default("active") // active, left, graduated
  leftReason String?
  
  motherPhone String?
  fatherPhone String?
}

model ScheduleTemplate {
  id        Int      @id @default(autoincrement())
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  daysOfWeek String  // "1,2,3" (Mon, Tue, Wed)
  startTime String   // "HH:MM"
  endTime   String   // "HH:MM"
  validFrom DateTime @default(now())
  validTo   DateTime?
}

model Lesson {
  id        Int      @id @default(autoincrement())
  date      DateTime
  topic     String?
  duration  Int      @default(60) // Duration in minutes
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  attendance Attendance[]
  isCompleted Boolean @default(false)
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  lessonId  Int
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  status    String   // PRESENT, ABSENT, EXCUSED
  grade     Int?     // 1-10 or 1-100
  comment   String?
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Int
  date      DateTime @default(now())
  method    String   // Cash, Card, Transfer
  comment   String?
  
  status    String   @default("paid") // pending, paid, overdue, refunded
  type      String   @default("monthly") // monthly, one_time
  period    String?  // e.g. "December 2025" or "2025-12"
  dueDate   DateTime?

  studentId Int
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  recordedBy Int?
}

model MockExam {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  type      String   @default("IELTS") // IELTS, TOEFL, General
  
  listening Float    @default(0)
  reading   Float    @default(0)
  writing   Float    @default(0)
  speaking  Float    @default(0)
  overall   Float    @default(0)
  
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  comment   String?
}

model Salary {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  amount    Int
  period    String
  paid      Boolean  @default(false)
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      Int
  category    String   // Rent, Salary, Marketing, Office, Other
  description String?
  date        DateTime @default(now())
  recordedBy  Int?
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String
  details   String?
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model LeadLog {
  id        Int      @id @default(autoincrement())
  action    String
  details   String?
  leadId    Int
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model TestResult {
  id           Int      @id @default(autoincrement())
  name         String
  phone        String
  email        String?
  score        Int
  level        String
  answers      String
  createdAt    DateTime @default(now())
}

model TelegramChat {
  id           Int       @id @default(autoincrement())
  chatId       String    @unique // External Telegram Chat ID
  username     String?
  firstName    String?
  lastName     String?
  photoUrl     String?
  type         String    @default("private") // private, group, etc.
  
  leadId       Int?
  lead         Lead?     @relation(fields: [leadId], references: [id])

  studentId    Int?
  student      Student?  @relation(fields: [studentId], references: [id])

  userId       Int?      // Linked Teacher/Admin
  user         User?     @relation(fields: [userId], references: [id])
  
  messages     TelegramMessage[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model TelegramMessage {
  id           Int          @id @default(autoincrement())
  chatId       Int
  chat         TelegramChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  
  messageId    Int?         // External Telegram Message ID
  text         String?
  photo        String?
  voice        String?
  document     String?
  
  isFromBot    Boolean      @default(false)
  isRead       Boolean      @default(false)
  
  createdAt    DateTime     @default(now())
}

model TrialLesson {
  id        Int      @id @default(autoincrement())
  name      String   // Name of the prospect
  phone     String
  date      DateTime
  price     Int      @default(1500)
  isPaid    Boolean  @default(false)
  
  teacherId Int?
  teacher   User?    @relation(fields: [teacherId], references: [id])
  
  status    String   @default("scheduled") // scheduled, completed, missed, cancelled
  createdAt DateTime @default(now())
}

model Material {
  id        Int      @id @default(autoincrement())
  title     String
  type      String   // PDF, Video, Link, Doc
  url       String   // File path or URL
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Homework {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  deadline    DateTime?
  courseId    Int
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model TeacherReport {
  id             Int      @id @default(autoincrement())
  teacherId      Int
  teacher        User     @relation(fields: [teacherId], references: [id])
  period         String   // "2025-12"
  
  lessons1h      Int      @default(0)
  lessons15h     Int      @default(0)
  trials         Int      @default(0)
  ielts          Int      @default(0)
  speaking       Int      @default(0)
  
  comment        String?
  status         String   @default("submitted") // submitted, approved, paid
  createdAt      DateTime @default(now())
}

model MessageTemplate {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

